<!DOCTYPE html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->
<html class="no-js" lang="en" >

<head>
  <meta charset="utf-8">
  <!-- If you delete this meta tag World War Z will become a reality -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Online Gift Survey{% endblock %}</title>

  <link rel="stylesheet" href="{{ asset('bundles/surveymain/css/normalize.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/surveymain/css/foundation.css') }}">

  {% block header_styles %}{% endblock %}
  {% block header_scripts %}{% endblock %}

  <script src="{{ asset('bundles/surveymain/js/vendor/modernizr.js') }}"></script>
</head>
<body>
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><a href="{{ path('main') }}">Online Gift Survey</a></h1>
      </li>
       <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <li>
          <a href="#">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a>
        </li>
        {% endif %}
        <li class="divider"></li>
        <li {% block log_active %}{% endblock %}>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <a href="{{ path('fos_user_security_logout') }}"> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
        </li>
        <li {% block home_active %}{% endblock %}><a href="{{ path('main') }}">Home</a></li>
        <!-- <li class="has-dropdown">
          <a href="#">Right Button Dropdown</a>
          <ul class="dropdown">
            <li><a href="#">First link in dropdown</a></li>
            <li class="active"><a href="#">Active link in dropdown</a></li>
          </ul>
        </li> -->
      </ul>

      <!-- Left Nav Section -->
      <!-- <ul class="left">
        <li><a href="#">Left Nav Button</a></li>
      </ul> -->
    </section>
  </nav>

  {% block content %}{% endblock %}

  {% block body_scripts %}{% endblock %}
  <script src="{{ asset('bundles/surveymain/js/vendor/jquery.js') }}"></script>
  <script src="{{ asset('bundles/surveymain/js/foundation.min.js') }}"></script>
  <script>
    $(document).foundation();
  </script>
</body>
</html>